{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Service Detail Schema",
  "type": "object",
  "required": ["id", "slug", "title", "toc", "sections"],
  "properties": {
    "id": { "type": "string" },
    "slug": { "type": "string" },
    "categoryId": { "type": "string" },
    "title": { "type": "string" },
    "subtitle": { "type": "string" },
    "price": { "type": "string" },
    "duration": { "type": "string" },
    "hero": {
      "type": "object",
      "properties": {
        "image": { "type": "string" },
        "alt": { "type": "string" },
        "caption": { "type": "string" }
      }
    },
    "toc": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "children": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "label"],
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "heading"],
        "properties": {
          "id": { "type": "string" },
          "heading": { "type": "string" },
          "content": { "type": "string" },
          "bullets": { "type": "array", "items": { "type": "string" } },
          "steps": { "type": "array", "items": { "type": "string" } },
          "image": { "type": "string" },
          "gallery": { "type": "array", "items": { "type": "string" } },
          "subsections": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "heading": { "type": "string" },
                "content": { "type": "string" },
                "bullets": { "type": "array", "items": { "type": "string" } },
                "steps": { "type": "array", "items": { "type": "string" } },
                "image": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "faq": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["q", "a"],
        "properties": {
          "q": { "type": "string" },
          "a": { "type": "string" }
        }
      }
    },
    "gallery": { "type": "array", "items": { "type": "string" } },
    "cta": {
      "type": "object",
      "properties": {
        "phone": { "type": "string" },
        "link": { "type": "string" },
        "label": { "type": "string" }
      }
    }
  }
}


